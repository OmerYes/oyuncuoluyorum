
@{
    ViewBag.Title = "ConfirmPassword";
    Layout = "~/Views/Shared/SiteLayout.cshtml";
}

@model ConfirmPasswordVM


<div class="ChangePassword">
    <div class="ChangePassword-a">
        @if (ViewBag.IslemDurum == EnumIslemDurum.ValidationHata)
        {
            <div class="alert alert-danger">
                @Html.ValidationSummary()
            </div>
        }
        @if (ViewBag.IslemDurum == EnumIslemDurum.IslemBasarili)
        {
    <div class="alert alert-success">
        @FormMessages.PasswordForget
        <a href="/oyuncu-olmak-istiyorum/Giris">Giriş için tıklayınız</a>
    </div>
        }
        else
        {
            <form style="margin-bottom: 98px" method="post">
                <h1>Şifremi Unuttum</h1>
                <div class="registration-type ">
                </div>
                <div class="form-group">
                    <label for="">Kod</label>
                    @Html.TextBoxFor(x => x.Code, new { @class = "form-control form-a", @id = "phone" })
                </div>

                <button type="submit" class="form-b" id="gonder">Güncelle</button>
            </form>
        }



    </div>
</div>

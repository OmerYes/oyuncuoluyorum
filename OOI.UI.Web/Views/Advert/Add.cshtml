
@{
    ViewBag.Title = "İlan Ekle";
    Layout = "~/Views/Shared/SiteLayout.cshtml";
}
<style>
    .CastFotograflari img {
        height: inherit;
        width: inherit;
    }
</style>

@model AdvertVM
<div class="CastOlusturma container">
    <div class="CastOlusturma-a">
        <div>
            <div class="baslıkcontainer">
                <div class="baslık star foto-16"></div>
                <div class="baslık"><span>İlan Oluşturma</span></div>
                <div class="baslık star foto-16"></div>
            </div>
        </div>

        <form class="CastForm" action="/Advert/Add" method="post" enctype="multipart/form-data">
            @Html.Partial("Partial/AdvertInfoForm", Model)
            @Html.Partial("Partial/AdvertPhotos", Model)

            <div class="ProjeAddButton" id="btnbutton"><button class="btn btn-warning " id="btnOlustur" type="submit">Oluştur</button></div>
        </form>
    </div>
</div>
<script src="~/Scripts/mask/jquery.inputmask.bundle.js"></script>
<script>
    $(document).ready(function () {
        $("#phone").inputmask({ "mask": "(999) 999-9999" });
    });
</script>

<script>

    function readURL(input) {
        if (input.files && input.files[0]) {
            var reader = new FileReader();

            reader.onload = function (e) {
                $('#projectmainimg').attr('src', e.target.result);
            }
            reader.readAsDataURL(input.files[0]);
        }
    }

    $("#projectmainfile").change(function () {
        readURL(this);
    });
</script>
<script>

    function readMultiURL(input, id) {
        if (input.files && input.files[0]) {
            var reader = new FileReader();

            reader.onload = function (e) {
                $('#foto' + id).attr('src', e.target.result);
            }

            reader.readAsDataURL(input.files[0]);
        }
    }

    $(".castfoto").change(function () {
        var id = $(this).attr("id");
        readMultiURL(this, id);
    });
</script>


@{
    ViewBag.Title = "Giriş";
    Layout = "~/Views/Shared/SiteLayout.cshtml";
}
@model WebUserLoginVM
<div class="container-fluid ">
    <div class="d-flex flex-column">
        <div class="kayit-headline">
            <h1>Kullanıcı Girişi</h1>
        </div>
        <div class="kayit d-flex justify-content-between">
            <div class="kayit-a kayit-giris">
                @if (ViewBag.IslemDurum == EnumIslemDurum.LoginHata)
                {
                    <div class="alert alert-danger">
                        @FormMessages.LoginError
                    </div>
                }
                else if (ViewBag.IslemDurum == EnumIslemDurum.ValidationHata)
                {
                    <div class="alert alert-danger">
                        @Html.ValidationSummary()
                    </div>
                }

                @using (Html.BeginForm("Login", "Account"))
                {
                    <div class="form-group kayit-a-label">
                        <label for="">E-postanız</label>
                        @Html.TextBoxFor(q => q.Email, new { @type = "email", @class = "form-control form-a", @placeholder = "" })
                    </div>
                    <div class="form-group mt-4 kayit-a-label">
                        <label for="">Şifreniz</label>
                        @Html.PasswordFor(q => q.Password, new { @class = "form-control form-a", @placeholder = "" })
                    </div>
                    <div class="forget-a "><a href="/Password/ForgetPassword" class="form-c">Şifremi unuttum</a></div>
                    <button type="submit" class="form-group form-b d-inline">Gönder</button>
                }

            </div>

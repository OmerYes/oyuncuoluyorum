
@{
    ViewBag.Title = "RemoveCategory";
    Layout = "~/Areas/Admin/Views/Shared/AdminUserLayoutPage.cshtml";

}

@model OOI.UI.Web.Areas.Admin.Models.VM.BlogCategoryVM

<h3>Category Detail</h3>

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Blog</h6>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                @using (Html.BeginForm("RemoveCategory", "BlogCategory", FormMethod.Post))
                {
                    <div class="form-group">
                        <label>Category ID : </label>
                        @Html.DisplayFor(x => x.ID, new { @type = "text", @class = "form-control", @id = "", @placeholder = "" })
                    </div>
                    <div class="form-group">
                        <label>Category Name : </label>
                        @Html.DisplayFor(x => x.Name, new { @type = "text", @class = "form-control", @id = "", @placeholder = "" })
                    </div>
                    <div class="form-group">
                        <label>Category Description : </label>
                        @Html.DisplayFor(x => x.Description, new { @class = "form-control", @id = "", @placeholder = "" })
                    </div>
                    <div>
                        <button type="submit" class="btn btn-outline-danger">Delete</button>
                    </div>

                }
                </table></div></div></div>

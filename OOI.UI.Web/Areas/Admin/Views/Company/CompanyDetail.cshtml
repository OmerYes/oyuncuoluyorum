
@{
    ViewBag.Title = "BlogDetail";
    Layout = "~/Areas/Admin/Views/Shared/AdminUserLayoutPage.cshtml";

}

@model OOI.UI.Web.Areas.Admin.Models.VM.CompanyVM

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Firma Bilgileri</h6>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                @using (Html.BeginForm("CompanyDetail", "Company", FormMethod.Post))
                {
                    @Html.HiddenFor(x => x.ID)
                    <div class="form-group">
                        <label>ID : </label>
                        @Html.DisplayFor(x => x.ID, new { @type = "text", @class = "form-control", @id = "", @placeholder = "" })
                    </div>
                    <div class="form-group">
                        <label>Firma Adı : </label>
                        @Html.DisplayFor(x => x.CompanyName, new { @type = "text", @class = "form-control", @id = "", @placeholder = "" })
                    </div>
                    <div class="form-group">
                        <label>Adres : </label>
                        @Html.DisplayFor(x => x.Address, new { @type = "text", @class = "form-control", @id = "", @placeholder = "" })
                    </div>
                    <div class="form-group">
                        <label>E-mail : </label>
                        @Html.DisplayFor(x => x.Email, new { @type = "text", @class = "form-control", @id = "", @placeholder = "" })
                    </div>
                    <div class="form-group">
                        <label>Telefon : </label>
                        @Html.DisplayFor(x => x.Phone, new { @type = "text", @class = "form-control", @id = "", @placeholder = "" })
                    </div>
                    <div class="form-group">
                        <label>Kategori : </label>
                        @Html.DisplayFor(x => x.CategoryName, new { @type = "text", @class = "form-control", @id = "", @placeholder = "" })
                    </div>
                    <div>
                    </div>
                }
            </table>
        </div>
    </div>
</div>

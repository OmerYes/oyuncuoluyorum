
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/AdminUserLayoutPage.cshtml";

}

@using GridMvc.Html

@model List<OOI.UI.Web.Areas.Admin.Models.VM.ProjectUserVM>


<div class="card shadow mb-4">
    <div class="card-header py-3">

        <h6 class="m-0 font-weight-bold text-primary">Kullanıcı Listesi</h6>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                @Html.Grid(Model).Columns(x =>
                {
                    x.Add(model => model.UserID).Titled("ID").Sortable(true).Filterable(true);
                    x.Add(model => model.UserName).Titled("Ad").Sortable(true).Filterable(true);
                    x.Add(model => model.UserLastName).Titled("Soyad").Sortable(true).Filterable(true);
                    }).WithPaging(5).SetLanguage("tr")
            </table>
        </div>
    </div>
</div>









